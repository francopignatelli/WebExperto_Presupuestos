<div id="<%= dom_id lineitem %>">
  <div class="see-budget-card">
    <div class="budget-image">
      <div class="b-img">
        <% if lineitem.product.image.attached? %>            
          <%= image_tag lineitem.product.image, style: "max-width: 300px; max-height: 300px;" %>            
        <% else %>
          <%= image_tag 'img/presupuestos/default-img.jpg', alt:"imagen", style: "max-width: 300px; max-height: 300px;" %>
        <% end %>
      </div>
      <div class="budget-info">
        <div class="budget-card-description">
          <div>
            <p><%= lineitem.product.name %></p>
          </div>
        </div>
        <div class="price-container">
          <div class="p-container">
            <div class="quantity-div">
              <%= lineitem.quantity %>
            </div>
            <p>Unidad</p>
          </div>
          <div class="price-div">
            <%= number_to_currency(lineitem.product.price, unit: '$', precision: 2, delimiter: ',', separator: '.1') %>
          </div>
          <%= link_to "Editar", edit_lineitem_path(lineitem) %>
        </div>
      </div>
    </div>
  </div>
</div>