<section class="section-ver-presupuesto">
  <div class="container">
    <div class="row justify-content-center mt-4">
      <div class="col-md-6">
        <%= form_with(model: lineitem) do |form| %>
          <% if lineitem.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(lineitem.errors.count, "error") %> prohibited this lineitem from being saved:</h2>

              <ul>
                <% lineitem.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form.hidden_field :budget_id, value: @lineitem.budget_id %>

          <div class="form-group">
            <%= form.label :product_id, "Product" %>
            <%= form.collection_select :product_id, Product.all, :id, :name, { prompt: "Select a product" }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :quantity %>
            <%= form.number_field :quantity, class: "form-control" %>
          </div>

          <div class="mt-3">
            <%= form.submit "Add product", class: "quit-budget" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>