<section class="section-ver-presupuesto">
  <%= render 'shared/header'%>
    <%= form_with(model: lineitem) do |form| %>
      <% if lineitem.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(lineitem.errors.count, "error") %> prohibited this lineitem from being saved:</h2>

          <ul>
            <% lineitem.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form.hidden_field :budget_id, value: @lineitem.budget_id %>
      <div>
        <%= form.label :product_id, "Product", style: "display: block" %>
        <%= form.collection_select :product_id, Product.all, :id, :name, prompt: "Select a product" %>
      </div>
      
      <div>
        <%= form.label :quantity, style: "display: block" %>
        <%= form.number_field :quantity %>
      </div>

      <div class="mt-3">
        <%= form.submit "Add product"%>
      </div>
    <% end %>
</section>