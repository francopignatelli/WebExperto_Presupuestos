<%= render 'shared/header' %>
<p style="color: green"><%= notice %></p>
<div class="budget-my-budget">
  <h1>Mis presupuestos</h1>
  <!-- Search bar -->
  <div class="budget-search-container">
    <div class="input-search-container">
      <%= image_tag 'img/icons/search.svg', alt:"search", class:"my-budget-search-icon" %>
      <input type="text" class="my-budget-search-input" placeholder="" />
    </div>
  </div>
<!-- Presupuestos -->
			<div class="budget-container">
        <% @budgets.each do |budget| %>
          <%= render budget %>
        <% end %>
				<div class="my-budgets-budget-buttons">
          <button class="my-budget-quit-budget" disabled>Quitar presupuesto</button>
          <%= link_to "Crear presupuesto", new_budget_path, class: "my-budget-create-budget" %>
				</div>
      </div>
</div>