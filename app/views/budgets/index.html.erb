<%= render 'shared/header' %>
<p style="color: green"><%= notice %></p>
<div class="budget-my-budget">
  <h1>Mis presupuestos</h1>
  <!-- Search bar -->
  <div class="budget-search-container">
    <div class="input-search-container">
      <% image_tag 'img/icons/search.svg', alt:"search", class:"search-icon" %>
      <input type="text" class="search-input" placeholder="" />
    </div>
  </div>
<!-- Presupuestos -->
			<div class="budget-container">
        <% @budgets.each do |budget| %>
          <%= render budget %>
          <p>
            <%= link_to "Edit this budget", edit_budget_path(budget) %> |
          </p>
        <% end %>
				<div class="budget-buttons">
          <%= link_to "New budget", new_budget_path, class: "create-budget" %>
					<button class="quit-budget" disabled>Quitar presupuesto</button>
				</div>
      </div>
</div>