			<%# </p>
		</div>  %>
		<%# <form action=""> %>
			<div class="form-container mi-cuenta-form-div">
				<div class="form-column-1">
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
						<%= render "devise/shared/error_messages", resource: resource %>
						<div>					
								<label for="">
									<label>Nombre</label><br />
									<%= f.text_field :name, autofocus: true %>
								</label>
						</div>
						<div>					
								<label for="">
									<label>Apellido</label><br />
									<%= f.text_field :last_name %>
								</label>
						</div>
						<div>					
								<label for="">
									<label>Contrase침a actual</label><i>(para confirmar cambios)</i><br />
									<%= f.password_field :current_password, autocomplete: "current-password" %>
								</label>
						</div>
						<div>					
								<label for="">
									<label>Nueva contrase침a</label><i>(Dejar en blanco si no desea cambiar)</i><br />
									<%= f.password_field :password, autocomplete: "new-password" %>
									<% if @minimum_password_length %>
										<br />
										<em><%= @minimum_password_length %> caracteres minimos</em>
									<% end %>
								</label>
						</div>
					</div>
					<div class="form-column-2">
						<div>					
								<label for="">
									<label>Email</label><br />
									<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
								</label>
						</div>
						<div>					
								<label for="">			
									<label>Direccion</label><br />
									<%= f.text_field :address %>
								</label>
						</div>
						<div>					
								<label for="">			
									<label>Telefono</label><br />
									<%= f.text_field :phone %>
								</label>
						</div>
						<div>					
								<label for="">			
									<label>Repetir contrase침a</label><br />
									<%= f.password_field :current_password, autocomplete: "current-password" %>
								</label>
						</div>				
					</div>
				</div>
				
				<div class="form-buttons">
					<%= f.submit "Actualizar" %>
					<%= link_to "Volver", :root, class: "back-logout"%>
					<%= link_to 'Cerrar sesi칩n', destroy_user_session_path, method: :delete , class: "back-logout" %>
