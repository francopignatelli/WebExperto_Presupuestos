<%= render "devise/shared/header" %>
<main>
			<h1 class="principal-title">Iniciar sesión</h1>
			<div class="my-account-cointainer">
				<img
					class="img-sesion"
					src="./img/registro/iniciar_sesion.svg"
					alt=""
				/>
				<div class="login-container">
					<p>¡Bienvenido! ingresá tu método para iniciar sesión</p>
					<div class="logo-container">
						<div>
							<img
								class="logo-google"
								src="./img/logos/google.png"
								alt="Google"
							/>
						</div>
						<div>
							<img src="./img/logos/facebook.png" alt="Facebook" />
						</div>
					</div>
					<div class="email-line">
						<div class="line"></div>
						<p>o continuá con tu email</p>
						<div class="line"></div>
					</div>
					<form action="">
						<input type="text" placeholder="Email" />
						<input type="submit" value="Iniciar sesión" />
					</form>
					<div class="registration-container">
						<p>¿No tenés cuenta?</p>
						<span>Registrate ahora</span>
					</div>
				</div>
			</div>
		</main>




<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.attributes.user.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.attributes.user.new.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<br />
<%= render "devise/shared/links" %>
<%= link_to "Ir al Inicio", root_path %> <br/>